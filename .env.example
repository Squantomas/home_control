# Home Control System Configuration
# Copy this file to .env and fill in your actual values

# Shelly Pro 3 Relay Configuration
SHELLY_PRO3_IP=192.168.1.100
SHELLY_PRO3_USER=your_username
SHELLY_PRO3_PASSWORD=your_password

# Shelly Pro 3EM 120A Configuration
SHELLY_PRO3EM_IP=192.168.1.101
SHELLY_PRO3EM_USER=your_username
SHELLY_PRO3EM_PASSWORD=your_password

# InfluxDB Configuration
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your_influx_token
INFLUX_ORG=your_organization
INFLUX_BUCKET=home_energy

# Grafana Configuration (optional)
GRAFANA_URL=http://localhost:3000
GRAFANA_EMBED_TOKEN=your_grafana_embed_token

# Application Configuration
LOG_LEVEL=info
HTTP_PORT=8080
HTTPS_PORT=8443

# Data Retention
INFLUX_RETENTION_DAYS=90

# MQTT Broker Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_BROKER_USERNAME=homecontrol
MQTT_BROKER_PASSWORD=your_mqtt_password
MQTT_CLIENT_ID=home_control_backend
MQTT_KEEPALIVE_SECONDS=60

# MQTT Topics Configuration
MQTT_TOPIC_PREFIX=shellies
# Shelly Pro 3 topics: shellies/shellyproplus3-{device_id}/rpc
# Shelly Pro 3EM topics: shellies/shellyplusem3-{device_id}/events/rpc
SHELLY_PRO3_DEVICE_ID=your_pro3_device_id
SHELLY_PRO3EM_DEVICE_ID=your_pro3em_device_id

# Data Ingestion Strategy
DATA_INGESTION_METHOD=mqtt  # Options: mqtt, http, hybrid
HTTP_FALLBACK_ENABLED=true

# Polling Configuration (used as fallback when MQTT unavailable)
METER_POLL_INTERVAL_SECONDS=30
DEVICE_TIMEOUT_SECONDS=10
