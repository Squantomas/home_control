# Home Control System Configuration
# Copy this file to .env and fill in your actual values

# Shelly Pro 3 Relay Configuration
SHELLY_PRO3_IP=192.168.1.100
SHELLY_PRO3_USER=your_username
SHELLY_PRO3_PASSWORD=your_password

# Shelly Pro 3EM 120A Configuration
SHELLY_PRO3EM_IP=192.168.1.101
SHELLY_PRO3EM_USER=your_username
SHELLY_PRO3EM_PASSWORD=your_password

# InfluxDB Configuration
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your_influx_token
INFLUX_ORG=your_organization
INFLUX_BUCKET=home_energy

# Grafana Configuration (optional)
GRAFANA_URL=http://localhost:3000
GRAFANA_EMBED_TOKEN=your_grafana_embed_token

# Application Configuration
LOG_LEVEL=info
HTTP_PORT=8080
HTTPS_PORT=8443

# Data Retention
INFLUX_RETENTION_DAYS=90

# Polling Configuration
METER_POLL_INTERVAL_SECONDS=30
DEVICE_TIMEOUT_SECONDS=10